{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "checkJs": true
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "singleQuote": true,
        "lineWidth": 120,
        "proseWrap": "never"
    },
    "lint": {
        "rules": {
            "tags": [],
            "include": ["eqeqeq", "camelcase"]
        }
    }
}
