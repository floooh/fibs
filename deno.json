{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "checkJs": true
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "singleQuote": true,
        "lineWidth": 120,
        "proseWrap": "never"
    },
    "lint": {
        "rules": {
            "tags": [],
            "include": ["eqeqeq", "camelcase"]
        }
    },
    "imports": {
        "@std/fmt": "jsr:@std/fmt@^1.0.8",
        "@std/fs": "jsr:@std/fs@^1.0.20",
        "@std/path": "jsr:@std/path@^1.1.3"
    }
}
