{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "checkJs": true
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "indentWidth": 4,
            "singleQuote": true,
            "lineWidth": 120
        }
    },
    "lint": {
        "rules": {
            "tags": [],
            "exclude": ["require-await"],
            "include": ["recommended", "eqeqeq", "camelcase", "no-extra-semi"]
        }
    }
}
